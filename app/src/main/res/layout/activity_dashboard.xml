<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FF7800">
    <RelativeLayout
        android:background="#853f0f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="#853F0F"
        android:layout_marginLeft="0dp"
        android:layout_toLeftOf="@+id/logout2"
        android:text="Income and Expenses"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"        
        android:textColor="#fff"/>
        <TextView
            android:id="@+id/logout2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textAlignment="inherit"
            android:textSize="20dp"
            android:text="..."
            android:textColor="#fff"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <Button
            android:id="@+id/addexpense"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#FF5722"
            android:text="Add EXPENSE"
            android:textColor="#fff"
            android:textSize="15sp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addincome"
            android:background="#FF5722"
            android:textColor="#fff"
            android:text="Add INCOME"
            android:textSize="15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/view_graph"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:background="#FF5722"
        android:text="VIEW GRAPH"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#fff"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/todate"
            android:background="#FF5722"
            android:textColor="#fff"
            android:text="GO TO DATE"
            android:textSize="15sp"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>